

<main class="container">
    <section>
        <h2 class="text-center py-3">Detalle de producto</h2>

        <div class="row">
            <div class="col">
                <div class="card mb-3" style="width: 90%">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img
                                src="/img/productos/{{producto.foto}}"
                                class="img-fluid rounded-start"
                                alt="{{producto.foto}}"
                            />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{producto.nombre}}</h5>
                                <p class="card-text">{{producto.descripcion}}</p>

                                <hr />
                                <p class="card-text">Precio: {{producto.precio}}</p>
                                <p class="card-text">Stock: {{producto.stock}}</p>

                                <div>
                                    <label for="cantidad">Cantidad:</label>
                                    <input type="number" id="cantidad" name="cantidad" min="1" max="{{producto.stock}}" value="1">
                                    <button id="linkPagar" class="btn btn-success m-2">Comprar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="/public/js/detalle.js"></script>

