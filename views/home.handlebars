<main class="container text-center">
    <h1 class="text-center">Bienvenido a mi aplicación con Express y Handlebars!</h1>
            <a href="/login">Login</a> | <a href="/register">Registro</a>
 {{#if error}}
        <section>
            <p>{{error}}</p>
        </section>
    {{else}}

    <header>
    <h1 class="text-center py-3">Listado de productos</h1>
    </header>
    <section class="filtros py-3">
                <form action="/productos">
                    {{!-- INICIO NOMBRE --}}
                    <input type="text" placeholder="Nombre o Descripción" name="nombre">
                    {{!-- FIN NOMBRE --}}

                    {{!-- INICIO PRECIO MÍNIMO --}}
                    <input type="number" placeholder="Precio min" name="precioMin">
                    {{!-- FIN PRECIO MÍNIMO --}}

                    {{!-- INICIO PRECIO MÍNIMO --}}
                    <input type="number" placeholder="Precio max" name="precioMax">
                    {{!-- FIN PRECIO MÍNIMO --}}
                    {{!-- INICIO PRECIO MÍNIMO --}}
                    <select name="orderFilter">
                        <option value="">Seleccione un filtro</option>
                        <option value="precioMayorMenor">Precio Mayor a Menor</option>
                        <option value="precioMenorMayor">Precio Menor a Mayor</option>
                        <option value="stockAsc">Stock Asc</option>
                        <option value="stockDesc">Stock Desc</option>

                    </select>
                    {{!-- FIN PRECIO MÍNIMO --}}

                    <div class="py-3">
                        <input type="submit" value="Filtrar" class="btn btn-primary">
                    </div>
                </form>
            </section>

        <section class="productos">

            <div class="row g-3">

                {{#each productos}}

                <div class="col-12 col-md-6 col-lg-4">
                    {{>CardProducto 
                        producto = this
                    }}
                </div>
                {{/each}}

            </div>

        </section>
    {{/if}}


</main>